meh - s : yabai -m space --focus 1;                     # yabai -m window --focus (yabai -m query --windows |jq '.[] | select (.app  == "iTerm2") | .id');
meh - d : yabai -m window --focus (yabai -m query --windows |jq '.[] | select (.app  == "Discord PTB") | .id');
